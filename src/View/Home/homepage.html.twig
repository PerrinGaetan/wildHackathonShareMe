{% extends 'layout.html.twig' %}
{% block stylesheet %}
{{ parent() }}
    <link rel="stylesheet" href="assets/css/styleCarousel.css">
{% endblock %}

{% block content %}

<main>

    <h1>Ne cherchez plus,<br />vos voisins l'on s√ªrement</h1>

    <section class="search">
        <form class="search__form" action="" method="get">
            <label for="search">Je recherche :
                <input class="search__form__label__input" type="search" name="artist" id="" placeholder="artist">
                <input class="search__form__label__input" type="search" name="album" id="" placeholder="album">
            </label>
            <input class="search__form__input--submit" type="submit" value="Rechercher">
        </form>
    </section>

    <div class="container text-center my-3">
    <div class="row mx-auto my-auto justify-content-center">
        <div id="recipeCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-img">
                                <img src="{{ mostPopular.0.0.0.cover }}" class="img-fluid" alt="{{ mostPopular.0.0.0.album }}">
                            </div>
                            <div class="card-img-overlay text-light">{{ mostPopular.0.0.0.artist }}</div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-img">
                                <img src="{{ mostPopular.1.0.0.cover }}" class="img-fluid" alt="{{ mostPopular.1.0.0.album }}">
                            </div>
                            <div class="card-img-overlay text-light">{{ mostPopular.1.0.0.artist }}</div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-img">
                                <img src="{{ mostPopular.2.0.0.cover }}" class="img-fluid" alt="{{ mostPopular.2.0.0.album }}">
                            </div>
                            <div class="card-img-overlay text-light">{{ mostPopular.2.0.0.artist }}</div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-img">
                                <img src="{{ mostPopular.3.0.0.cover }}" class="img-fluid" alt="{{ mostPopular.3.0.0.album }}">
                            </div>
                            <div class="card-img-overlay text-light">{{ mostPopular.3.0.0.artist }}</div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-img">
                                <img src="{{ mostPopular.4.0.0.cover }}" class="img-fluid" alt="{{ mostPopular.4.0.0.album }}">
                            </div>
                            <div class="card-img-overlay text-light">{{ mostPopular.4.0.0.artist }}</div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-img">
                                <img src="{{ mostPopular.5.0.0.cover }}" class="img-fluid" alt="{{ mostPopular.5.0.0.album }}">
                            </div>
                            <div class="card-img-overlay text-light">{{ mostPopular.5.0.0.artist }}</div>
                        </div>
                    </div>
                </div> 
            </div>
            <a class="carousel-control-prev bg-transparent w-aut" href="#recipeCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next bg-transparent w-aut" href="#recipeCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </a>
        </div>
    </div>
</div>

<section class="match">
    {% if matches %}
            <ul class="cardUser">
                {% for match in matches %}
                    <div class="cardUser__div">
                        <li class="userMatch"><a href="/profile?id={{ match.id }}">{{ match.name }}</a></li>
                        <div class="blackCircle">
                            <div class="orangeCircle">
                                <div class="holeCenter"></div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </ul>
            
        {% endif %}
</section>

    <section class="aroundMe">
        <iframe src="https://www.google.com/maps/d/embed?mid=1gnBWAwBGQAbYmh8Na8AiDBEgHv5Z8hhP" width="940" height="680"></iframe>
    </section>

</main>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="assets/javascript/carousel.js"></script>
{% endblock %}
